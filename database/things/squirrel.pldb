    }
  
    class Vector3 extends BaseVector {
      function _add(other)
      {
        if(other instanceof ::Vector3)
          return ::Vector3(x+other.x,y+other.y,z+other.z);
        else
          throw "wrong parameter";
      }
      function Print()
      {
        ::print(x+","+y+","+z+"\n");
      }
    }
  
    local v0 = Vector3(1,2,3)
    local v1 = Vector3(11,12,13)
    local v2 = v0 + v1;
    v2.Print();
